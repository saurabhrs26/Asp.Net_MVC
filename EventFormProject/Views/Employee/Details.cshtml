@model EventFormProject.Models.Employee

@{
    ViewBag.Title = "Employee Details";
}

<h1>Details of - @Model.EmployeeName</h1>
<table class="table table-hover table-striped table-primary">
    <tbody>
        <tr>
            <th>ID</th>
            <td>@Model.EmployeeId</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.EmployeeName</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.EmployeeAddress</td>
        </tr>
        <tr>
            <th>City</th>
            <td>@Model.EmployeeCity</td>

        </tr>
        <tr>
            <th>Country</th>
            <td>@Model.EmployeeCountry</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.EmployeeMail</td>

        </tr>
        <tr>
            <th>Phone</th>
            <td>@Model.EmployeePhone</td>
        </tr>
        <tr>
            <th>Skills</th>
            <td>@Model.EmployeeSkill</td>

        </tr>
        <tr>
            <th>Avatar</th>
            <td>
                <img src="@Url.Content(Model.EmployeeAvtar) alt="@Model.EmployeeName"/>
            </td>
        </tr>
        <tr>
            <th>Zipcode</th>
            <td>@Model.EmployeeZipcode</td>
        </tr>
    </tbody>
</table>
